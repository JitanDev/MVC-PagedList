@using PagedList.Mvc
@model PagedList.IPagedList<TestProj.Models.Employee>    

@*@model IEnumerable<TestProj.Models.Employee>*@

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <table>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Designation</td>
                <td>Joining Date</td>
            </tr>
            @foreach (var student in Model)
            {
                <tr>
                    <td>
                        @student.Id
                    </td>
                    <td>
                        @student.Name
                    </td>
                    <td>
                        @student.Designation
                    </td>
                    <td>
                        @student.JoiningDate
                    </td>
                </tr>}
        </table>
        <div class="pagination" style="margin-left: 10px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</body>
</html>
